{
  "compileOnSave"  : true,
  "compilerOptions": {
    "module"             : "commonjs",
    "target"             : "es6",
    "noImplicitAny"      : true,
    "noImplicitReturns"  : true,
    "noImplicitUseStrict": true,
    "sourceMap"          : true,
    "newLine"            : "lf",
    "removeComments"     : true,
    "listFiles"          : true,
    "declaration"        : true,
    "noLib"              : false,
    "outDir"             : "lib"
  },
  "exclude"        : [
    "node_modules"
  ],
  "files"          : [
    "typings/index.d.ts",
    "sem.d.ts",
    "srbevent.ts"
  ]
}
